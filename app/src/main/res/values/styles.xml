<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="member_title_textStyle" >
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="main_nickname_style" >
        <item name="android:textColor">#FFD1C119</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="title_style">
        <item name="android:background">@color/white</item>
        <item name="android:layout_height">60dp</item>
    </style>

    <style name="title_left_style">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_centerVertical">true</item>
    </style>
    <style name="title_middle_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/color_title</item>
    </style>

    <style name="member_center_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_member_item</item>
        <item name="android:layout_marginLeft">@dimen/member_center_margin_left</item>
        <item name="android:layout_marginRight">@dimen/member_center_margin_Right</item>
        <item name="android:layout_marginTop">@dimen/member_center_margin_Top</item>
    </style>

</resources>
